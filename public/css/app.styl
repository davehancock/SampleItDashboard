theme-color = #2E6492

h2
  color: theme-color

// Prevents page from shifting to the left when scroll bar pops
html
  overflow-y: scroll

// Nav Bar Header styling
.navbar-default
  background-color: #F4F6F7
  border-top: none
  border-left: none
  border-right: none
  border-bottom: solid
  border-color: #D4D2D2
  border-width: 1px
  border-radius: 0

// Used for collapsing nav bar on resize
@media (max-width: 767px)

  .visible-xs.collapse.in
    display: block !important

  .visible-xs.collapse
    display: none !important

  .nav>li
    border-top: 2px solid #ddd;

.jumbotron
  background-color: #8CA8D4

// Button color override
button-border = #466c8b

.btn-primary
  color: #fff
  background-color: #57ace4
  border-color: button-border

.btn-primary:active
  color: #fff
  background-color: theme-color
  border-color: button-border

.btn-primary:hover
  color: #fff
  background-color: theme-color
  border-color: button-border

// CPU page styling
.host-tabs
  margin-top: 20px
  margin-bottom: 20px




.nav-tabs
  border-bottom: 1px solid #ddd;

.nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover
  color: theme-color

a
  color: theme-color

.cpu-isolation-block
  float: left
  position: relative
  width: 50%

// Slider style overrides
rzslider .rz-pointer
  background-color: theme-color

rzslider .rz-pointer.rz-active:after
  background-color: #FFFFFF

// Footer Styling
html
  position: relative
  min-height: 100%

body
  margin-bottom: 100px

.footer-content
  margin-top: 20px;
  text-align: right

.footer
  border-top: solid
  border-color #D4D2D2
  border-width: 1px

  position: absolute
  bottom: 0
  width: 100%
  height: 60px
  background-color: #B5B5B5
  font-style: italic

// Override for chrome focus blue halo on AngularJS form components
:focus
  outline: none !important
