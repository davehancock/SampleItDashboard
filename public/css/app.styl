theme-color = #2E6492

h2
  color: theme-color

// Prevents page from shifting to the left when scroll bar pops
html
  overflow-y: scroll

// Nav Bar Header styling
.navbar-default
  background-color: #136F9E
  border: 1px none #d4d2d2;
  border-bottom-style: solid;
  border-radius: 0;

// Navbar Toggle
.navbar-default .navbar-toggle
  border-color: #136F9E

.navbar-default .navbar-toggle:focus, .navbar-default .navbar-toggle:hover
  background-color: #136F9E

// Navbar Brand
.navbar-default .navbar-brand
  color: #FFF

.navbar-default .navbar-brand:focus, .navbar-default .navbar-brand:hover
  color: #FFF

// Navbar list items
.navbar-default .navbar-nav > li > a
  color: #f1f1f1

.navbar-default .navbar-nav > li > a:focus, .navbar-default .navbar-nav > li > a:hover
  color: #D5D8DE

// Used for collapsing nav bar on resize
@media (max-width: 767px)

  .visible-xs.collapse.in
    display: block !important

  .visible-xs.collapse
    display: none !important

  .navbar-default .navbar-toggle .icon-bar
    background-color: #ebebeb;

  .navbar-header
    border-bottom: 1px solid #e7e7e7;

.jumbotron
  color: #fff
  font-family: Montserrat, sans-serif;
  background: url("images/internals.jpeg")
  background-size: cover
  min-height: 600px

  padding-right: 15px
  padding-left: 15px
  margin-right: auto
  margin-left: auto

.jumbotron-lost
  background: url("images/lost.jpeg")
  background-size: cover

.lost-quote
  margin-top: 20px
  padding-top: 20px
  font-style: italic
  font-weight bold

.jumbotron-header
  background: rgba(31, 39, 41, 0.48)
  display: inline-block

  padding-left: 20px
  padding-right: 20px

.jumbotron-button
  padding: 25px

// Button color override
button-border = #1f2c3f

.btn-primary
  color: #fff
  background-color: #136F9E;
  border-color: button-border

.btn-primary:active
  color: #fff
  background-color: theme-color
  border-color: button-border

.btn-primary:hover
  color: #fff
  background-color: theme-color
  border-color: button-border

// CPU page styling
.host-tabs
  margin-top: 20px
  margin-bottom: 20px

.nav-tabs
  border-bottom: 1px solid #ddd;

.nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover
  color: theme-color

a
  color: theme-color

// Slider style overrides
rzslider .rz-pointer
  background-color: theme-color

rzslider .rz-pointer.rz-active:after
  background-color: #FFFFFF

// Footer Styling
html
  position: relative
  min-height: 100%

body
  margin-bottom: 100px

.footer-content
  margin-top: 20px;
  text-align: right
  color: #ECF3FD

.footer
  border: 1px #d4d2d2
  border-top-style: solid

  position: absolute
  bottom: 0
  width: 100%
  height: 60px

  background-color: #7F8E9C

// Override for chrome focus blue halo on AngularJS form components
:focus
  outline: none !important

// Angular ng-cloak css rules must be loaded first, hence are included here.
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display: none !important;
